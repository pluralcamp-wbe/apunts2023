<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/util 
        http://www.springframework.org/schema/util/spring-util.xsd
        http://www.springframework.org/schema/context 
          http://www.springframework.org/schema/context/spring-context-4.2.xsd
          http://www.springframework.org/schema/aop
          http://www.springframework.org/schema/aop/spring-aop.xsd">

	<bean id="purchase" class="com.pluralcamp.aspects.xml.Purchase"></bean>
	<bean id="itemsValidator"
		class="com.pluralcamp.aspects.xml.ItemsValidator"></bean>

	<aop:config>
		<aop:aspect ref="itemsValidator">
			<aop:pointcut
				expression="execution (* com.pluralcamp.aspects.xml.Purchase.buy(..))"
				id="buyPointCut" />
			<aop:before pointcut-ref="buyPointCut"
				method="checkAmount" />
			<aop:after-returning pointcut-ref="buyPointCut"
				method="pack" />
			<aop:after-throwing pointcut-ref="buyPointCut"
				method="fileComplain" />
		</aop:aspect>
	</aop:config>

</beans>